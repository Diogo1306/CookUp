<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_medium"
    android:paddingBottom="@dimen/padding_large"
    app:cardCornerRadius="@dimen/border_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:padding="@dimen/padding_very_small"
            android:scaleType="centerCrop"
            android:background="@drawable/image_rounded_corner"
            android:src="@drawable/placeholder" />

        <!-- Conteúdo à Direita -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:gravity="center_vertical">

            <!-- Linha do título + botões -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/recipe_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Título da Receita" />

                <ImageButton
                    android:id="@+id/button_edit_recipe"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_circle"
                    android:src="@drawable/ic_edit"
                    android:padding="6dp"
                    android:contentDescription="Editar" />

                <ImageButton
                    android:id="@+id/button_delete_recipe"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_circle"
                    android:src="@drawable/ic_trash"
                    android:padding="6dp"
                    android:contentDescription="Excluir" />
            </LinearLayout>

            <!-- Avaliação / Visualizações / Finalizadas -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="start|center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star" />
                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="4.9"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

                <Space android:layout_width="12dp" android:layout_height="0dp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_hat_chef" />
                <TextView
                    android:id="@+id/recipe_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="234"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

                <Space android:layout_width="12dp" android:layout_height="0dp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_check" />
                <TextView
                    android:id="@+id/recipe_finished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="3"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />
            </LinearLayout>

            <!-- Datas -->
            <TextView
                android:id="@+id/recipe_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Criado: 02/06/2025"
                android:textSize="11sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/recipe_updated_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atualizado: 05/06/2025"
                android:textSize="11sp"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
