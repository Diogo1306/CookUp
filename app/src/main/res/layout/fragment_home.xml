                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OlÃ¡, xxxxxx ðŸ‘‹"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O que vais cozinhar hoje?"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_large" />

        </LinearLayout>

        <EditText
            android:id="@+id/searchEditText"
            style="@style/input"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:autofillHints="emailAddress"
            android:drawableStart="@drawable/ic_search"
            android:layout_marginTop="@dimen/margin_small"
            android:drawablePadding="@dimen/padding_small"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="Receitas, categorias, Alimentos.."
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:text="Categorias"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:textSize="@dimen/text_medium"
            android:layout_marginTop="@dimen/margin_medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/layout_animation_fade_slide_up"
            android:layout_marginTop="@dimen/margin_very_small"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_very_small"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium">

            <TextView
                android:id="@+id/title_recommended"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="Recomendado para ti"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/see_more_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver mais"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_very_small"
                android:textColor="@color/primary"
                android:fontFamily="@font/poppins_semibold"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
