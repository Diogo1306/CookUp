<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_small"
    android:elevation="6dp"
    android:layout_marginEnd="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="@dimen/border_radius"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/image_rounded_corner" />

            <ImageButton
                android:id="@+id/button_save_recipe"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="6dp"
                android:background="@drawable/bg_circle"
                android:src="@drawable/ic_bookmark"
                android:layout_gravity="top|end"
                android:contentDescription="Guardar Receita" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_very_small"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="@dimen/text_small"
        android:text="Nome da Receita"
        android:textColor="@color/text_primary"
        android:maxLines="1"
        android:ellipsize="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:paddingVertical="4dp">

        <ImageView
            android:layout_width="@dimen/icon_size_very_small"
            android:layout_height="@dimen/icon_size_very_small"
            android:src="@drawable/ic_clock" />

        <TextView
            android:id="@+id/preparation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_very_small"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="20 min."
            android:textSize="@dimen/text_very_small"
            android:textColor="@color/text_secondary" />

        <Space
            android:layout_width="@dimen/margin_small"
            android:layout_height="0dp" />

        <ImageView
            android:layout_width="@dimen/icon_size_very_small"
            android:layout_height="@dimen/icon_size_very_small"
            android:src="@drawable/ic_star" />

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_very_small"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="4.9"
            android:textSize="@dimen/text_very_small"
            android:textColor="@color/text_secondary" />
    </LinearLayout>
</LinearLayout>
