<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="button_primary" parent="BaseButton">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="button_secundary" parent="BaseButton">
        <item name="android:background">@drawable/button_secundary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

</resources>