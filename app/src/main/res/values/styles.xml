<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="button_primary" parent="BaseButton">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="button_secundary" parent="BaseButton">
        <item name="android:background">@drawable/button_secundary</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_very_small</item>
    </style>

    <style name="RatingBarYellow" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/accent_orange</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

</resources>